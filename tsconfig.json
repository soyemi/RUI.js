{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015","es2016","es2017","dom"],
        "strict": false,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        //"declarationDir": "dist/types",
        "outDir": "./dist/lib",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/wglut/dist/types"
        ],
        "types": [
            "wglut","opentype.js"
        ]
    },
    "include": [
        "./src/script"
    ]
}